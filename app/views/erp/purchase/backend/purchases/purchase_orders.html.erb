<% content_for :title do %>
    <%= t('.orders') %>
<% end %>

<% content_for :page_title do %>
    <i class="icon-basket"></i> <%= t('.orders') %>
<% end %>

<% content_for :page_toolbar do %>
    <div class="btn-group">
        <div class="clearfix">
        </div>
    </div>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create_purchase_order'),
        href: erp_orders.new_backend_order_path(type: Erp::Orders::Order::TYPE_PURCHASE_ORDER),
        class: 'btn-noborder'
    }) %>
<% end %>

<% content_for :global_filter do %>
    <div class="row top-datalist">
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: t('.order_from_date'),
                name: 'order_from_date',
                placeholder: t('.select_from_date')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: t('.order_to_date'),
                name: 'order_to_date',
                placeholder: t('.select_to_date')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'supplier',
                label: t('.filter_supplier'),
                placeholder: t('.choose_supplier'),
                url: erp_contacts.dataselect_backend_contacts_path(format: 'json', is_supplier: true),
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'warehouse',
                label: t('.filter_warehouse'),
                placeholder: t('.choose_warehouse'),
                url: erp_warehouses.dataselect_backend_warehouses_path(format: 'json'),
            }) %>
        </div>
    </div>
<% end %>

